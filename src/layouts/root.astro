---
import ThemeSwitcher from "../components/theme-switcher.astro";
import "../styles.css";
---

<script>
  import Alpine from "alpinejs";
  import persist from "@alpinejs/persist";

  Alpine.plugin(persist);

  const LOCAL_STORAGE_THEME_KEY = "saved-theme";

  Alpine.data("theme", () => ({
    get current() {
      const theme = localStorage.getItem(LOCAL_STORAGE_THEME_KEY);

      if (theme === "dark" || theme === "light") {
        return theme;
      }

      // fallback to the user's prefers-color-schema
      if (window.matchMedia?.("(prefers-color-scheme: light)").matches) {
        return "light";
      }

      return "dark";
    },

    setTheme(theme: string) {
      localStorage.setItem(LOCAL_STORAGE_THEME_KEY, theme);
    },
  }));
</script>

<html
  lang="en"
  class="size-full"
  x-data="{theme: $persist(window.matchMedia?.('(prefers-color-scheme: light)').matches ? 'light' : 'dark')}"
  data-theme="light"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Lost Cities Scorecard</title>
  </head>

  <body class="size-full flex flex-col">
    <div class="navbar px-3 bg-base-200 shadow-sm">
      <div class="flex-1">
        <span class="text-xl font-semibold">Lost Cities Scorecard</span>
      </div>

      <div class="flex-none">
        <ThemeSwitcher
          x-bind:checked="theme === 'dark'"
          x-on:change="theme = $event.target.checked ? 'dark' : 'light'"
        />
      </div>
    </div>

    <div class="overflow-y-auto">
      <slot />
    </div>
  </body>
</html>
